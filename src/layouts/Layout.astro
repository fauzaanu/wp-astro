---
import '~/assets/base.css';
import Footer from '~/components/Footer.astro';
import {siteConfig} from '~/config';
import { ViewTransitions } from 'astro:transitions';
import { getCategories } from 'lib/api.js';

const categories: Array<{
    id: number;
    name: string;
    slug: string;
    parent: number | null;
}> = await getCategories();

export interface Props {
    title: string;
    description?: string;
    image?: string;
    canonicalURL?: string;
}

const {
    title,
    description = siteConfig.description,
    image = siteConfig.organization.logo,
    canonicalURL = new URL(Astro.url.pathname, siteConfig.siteUrl).href,
} = Astro.props;

const fullTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;
---

<!DOCTYPE html>
<html lang={siteConfig.defaultLanguage}>
<head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{fullTitle}</title>
    <meta name="description" content={description}/>
    <link rel="canonical" href={canonicalURL}/>
    <meta name="author" content={siteConfig.author.name}/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script is:inline defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <ViewTransitions />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={siteConfig.openGraph.type}/>
    <meta property="og:site_name" content={siteConfig.openGraph.siteName}/>
    <meta property="og:title" content={fullTitle}/>
    <meta property="og:description" content={description}/>
    <meta property="og:image" content={image}/>
    <meta property="og:url" content={canonicalURL}/>
    <meta property="og:locale" content={siteConfig.openGraph.locale}/>

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content={fullTitle}/>
    <meta name="twitter:description" content={description}/>
    <meta name="twitter:image" content={image}/>



    <!-- JSON-LD -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": siteConfig.organization.name,
        "url": siteConfig.siteUrl,
        "logo": siteConfig.organization.logo,
        "sameAs": siteConfig.organization.sameAs
    })}/>
</head>
<body class="bg-zinc-950 text-zinc-100 pb-5" x-data="{ isOpen: false }" :class="{ 'overflow-hidden': isOpen }">
<header class="sticky top-0 z-50 bg-zinc-900/90 backdrop-blur-sm border-b border-zinc-800 w-full">
    <div class="max-w-7xl mx-auto">
        <nav>
            <div class="flex justify-between items-center h-16 px-4 lg:px-0">
                <a href="/" class="flex items-center">
                        <span class="text-2xl font-serif font-bold text-zinc-100">
                            {siteConfig.name}
                        </span>
                </a>
                <form action="/search" method="get" class="hidden md:flex items-center" autocomplete="off">
                    <input
                            type="search"
                            name="q"
                            placeholder="Search posts..."
                            class="px-4 py-1 w-full bg-zinc-800 border border-zinc-700 text-zinc-100 placeholder-zinc-400 focus:outline-none focus:border-zinc-600 focus:ring-1 focus:ring-zinc-600 w-64 rounded-lg"
                    />
                </form>
                <!-- Mobile menu button -->
                <button 
                    @click="isOpen = !isOpen" 
                    class="md:hidden text-zinc-400 hover:text-zinc-100 focus:outline-none"
                    aria-label="Toggle menu"
                >
                    <svg 
                        class="h-6 w-6" 
                        x-show="!isOpen" 
                        xmlns="http://www.w3.org/2000/svg" 
                        fill="none" 
                        viewBox="0 0 24 24" 
                        stroke="currentColor"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <svg 
                        class="h-6 w-6" 
                        x-show="isOpen" 
                        xmlns="http://www.w3.org/2000/svg" 
                        fill="none" 
                        viewBox="0 0 24 24" 
                        stroke="currentColor"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                <div class="hidden md:flex items-center space-x-8">
                    {siteConfig.navigation.map(item => (
                        <a
                            href={item.href}
                            class="text-zinc-400 hover:text-zinc-100"
                        >
                            {item.name}
                        </a>
                    ))}
                    
                    {/* Categories Menu */}
                    {categories
                        .filter(category => !category.parent)
                        .map(parentCategory => (
                            <div class="relative group">
                                <a 
                                    href={`/categories/${parentCategory.slug}`}
                                    class="text-zinc-400 hover:text-zinc-100"
                                >
                                    {parentCategory.name}
                                </a>
                                {categories.some(cat => cat.parent === parentCategory.id) && (
                                    <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-zinc-800 ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                                        <div class="py-1" role="menu">
                                            {categories
                                                .filter(cat => cat.parent === parentCategory.id)
                                                .map(childCategory => (
                                                    <a
                                                        href={`/categories/${childCategory.slug}`}
                                                        class="block px-4 py-2 text-sm text-zinc-300 hover:bg-zinc-700"
                                                        role="menuitem"
                                                    >
                                                        {childCategory.name}
                                                    </a>
                                                ))
                                            }
                                        </div>
                                    </div>
                                )}
                            </div>
                        ))
                    }
                </div>
            </div>
        </nav>
    </div>

    <!-- Mobile menu overlay -->
    <div 
        x-show="isOpen" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-red-950 md:hidden"
        style="min-height: 100vh; width: 100vw;"
    >
        <div class="flex flex-col h-full p-4">
            <div class="flex justify-between items-center mb-8">
                <a href="/" class="text-2xl font-serif font-bold text-zinc-100">
                    {siteConfig.name}
                </a>
                <button 
                    @click="isOpen = false"
                    class="text-zinc-400 hover:text-zinc-100 focus:outline-none"
                >
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <form action="/search" method="get" class="mb-8" autocomplete="off">
                <input
                    type="search"
                    name="q"
                    placeholder="Search posts..."
                    class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 text-zinc-100 placeholder-zinc-400 focus:outline-none focus:border-zinc-600 focus:ring-1 focus:ring-zinc-600 rounded-lg"
                />
            </form>

            <nav class="flex flex-col space-y-4">
                {siteConfig.navigation.map(item => (
                    <a
                        href={item.href}
                        class="text-zinc-400 hover:text-zinc-100 text-lg"
                        @click="isOpen = false"
                    >
                        {item.name}
                    </a>
                ))}

                {/* Mobile Categories Menu */}
                {categories
                    .filter(category => !category.parent)
                    .map(parentCategory => (
                        <div class="space-y-2">
                            <a 
                                href={`/categories/${parentCategory.slug}`}
                                class="text-zinc-400 hover:text-zinc-100 text-lg"
                                @click="isOpen = false"
                            >
                                {parentCategory.name}
                            </a>
                            <div class="ml-4 space-y-2">
                                {categories
                                    .filter(cat => cat.parent === parentCategory.id)
                                    .map(childCategory => (
                                        <a
                                            href={`/categories/${childCategory.slug}`}
                                            class="block text-zinc-500 hover:text-zinc-300 text-base"
                                            @click="isOpen = false"
                                        >
                                            {childCategory.name}
                                        </a>
                                    ))
                                }
                            </div>
                        </div>
                    ))
                }
            </nav>
        </div>
    </div>
</header>

<div class="max-w-7xl mx-auto">
    <main class="min-h-screen flex flex-col bg-zinc-950 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 blur-[120px] pointer-events-none"></div>
        <div class="relative">
            <slot/>
        </div>
    </main>
    <Footer/>
</div>
</body>
</html>
