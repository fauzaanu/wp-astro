---
import '~/assets/base.css';
import Footer from '~/components/Footer.astro';
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta
            name="description"
            content="A website built with Astro and WordPress REST API!"
        />
    </head>
    <body>
        <header class="sticky top-0 z-50 bg-white border-b border-gray-200">
            <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <a href="/" class="flex items-center">
                        <span class="text-2xl font-serif font-bold text-gray-900">The Daily Post</span>
                    </a>
                    <div class="hidden md:flex space-x-8">
                        <a href="/" class="text-gray-700 hover:text-gray-900">Home</a>
                        <a href="/categories" class="text-gray-700 hover:text-gray-900">Categories</a>
                        <a href="/about" class="text-gray-700 hover:text-gray-900">About</a>
                    </div>
                </div>
            </nav>
        </header>

        <main class="min-h-screen flex flex-col bg-gray-50">
            <slot />
        </main>

        <Footer />
    </body>
</html>
