---
export interface Props {
    post: any;
    variant?: 'default' | 'compact';
}

const { post, variant = 'default' } = Astro.props;
---

{variant === 'compact' ? (
    <article class="flex space-x-4 items-start group">
        <img
            src={post._embedded['wp:featuredmedia']['0']?.source_url}
            alt={post.title?.rendered}
            class="w-24 h-24 object-cover border border-zinc-100/10"
        />
        <div class="min-w-0 flex-1">
            <h3 class="font-medium text-zinc-100">
                <a 
                    href={`/posts/${post.slug}/`} 
                    class="truncate block max-w-full" 
                    set:html={post.title?.rendered || 'Untitled Post'} 
                />
            </h3>
            <p class="text-sm text-zinc-400 mt-1 truncate">
                {new Date(post.date).toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric',
                })}
            </p>
        </div>
    </article>
) : (
    <article class="bg-zinc-800 overflow-hidden border border-zinc-100/10 shadow-lg">
        <a href={`/posts/${post.slug}/`} class="block aspect-[16/10] overflow-hidden">
            <img
                src={post._embedded['wp:featuredmedia']['0']?.source_url}
                alt={post.title?.rendered}
                class="w-full h-full object-cover"
            />
        </a>
        <div class="p-5">
            <div class="mb-4">
                <span class="text-xs font-medium text-zinc-400 tracking-wider">
                    {new Date(post.date).toLocaleDateString('en-US', {
                        month: 'long',
                        day: 'numeric',
                        year: 'numeric',
                    })}
                </span>
            </div>
            <h3 class="text-lg font-bold text-zinc-100 mb-3">
                <a 
                    href={`/posts/${post.slug}/`}
                    class="truncate leading-snug block"
                    set:html={post.title?.rendered || 'Untitled Post'} 
                />
            </h3>
            <a href={`/posts/${post.slug}/`}
               class="inline-flex items-center text-zinc-300 text-sm font-semibold mt-4">
                Read
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </article>
)}
