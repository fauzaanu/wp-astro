---
const { category, showCount = false } = Astro.props;
---

<a 
    href={`/categories/${category.slug}/`}
    class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 hover:bg-gray-200 transition-colors"
>
    <span>{category.name}</span>
    {showCount && category.count && (
        <span class="px-1.5 py-0.5 text-xs bg-gray-200 rounded-full">
            {category.count}
        </span>
    )}
</a>
